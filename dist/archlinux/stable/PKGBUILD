pkgname=ponymenu
pkgver=1.0
pkgrel=1
pkgdesc="Quick terminal based application menu"
arch=('any')
url="https://github.com/maandree/$pkgname"
license=('GPL3')
depends=('python>=3')
provides=($pkgname)
conflicts=($pkgname)
source=($url/tarball/$pkgver)
md5sums=(57fdba2f9ea0ba523cb8bd0a82c0b4c8)

build() {
  cd maandree-${pkgname}-*
  make -B DESTDIR="$pkgdir/"
}

package() {
  cd maandree-${pkgname}-*
  make DESTDIR="$pkgdir/" install
}
