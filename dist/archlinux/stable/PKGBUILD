pkgname=ponymenu
pkgver=0.9.1
pkgrel=1
pkgdesc="Quick terminal based application menu"
arch=('any')
url="https://github.com/maandree/ponymenu"
license=('GPL3')
depends=('python>=3')
provides=('ponymenu')
conflicts=('ponymenu')
source=(https://github.com/maandree/ponymenu/tarball/0.9.1)
