pkgname=ponymenu
pkgver=1.2
pkgrel=1
pkgdesc="Quick terminal based application menu"
arch=('any')
url="https://github.com/maandree/$pkgname"
license=('GPL3')
depends=('python>=3')
provides=($pkgname)
conflicts=($pkgname)
source=($url/tarball/$pkgver)
sha256sums=(a1e7b7e86a0f6c11ce9a41a7f277c16500f2f6390436982c9987056551b16cd4)

build() {
  cd maandree-${pkgname}-*
  make -B DESTDIR="$pkgdir/"
}

package() {
  cd maandree-${pkgname}-*
  make DESTDIR="$pkgdir/" install
}
